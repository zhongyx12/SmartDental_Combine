<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:id="@+id/bill_list_item_name" 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="18sp"
         android:textColor="#000000"
         android:textStyle="bold"
         android:text="name"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="10dp"
         android:paddingTop="10dp"
         />
     <TextView
         android:id="@+id/bill_list_item_date"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="12sp"
         android:textColor="#CCCCCC"
         android:layout_alignLeft="@+id/bill_list_item_name"
         android:text="2014-5-15"
         android:layout_below="@+id/bill_list_item_name"
         />
     <TextView
         android:id="@+id/bill_list_item_cost"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#123456"
         android:textSize="15sp"
         android:text="$30"
         android:layout_alignParentRight="true"
         android:layout_marginRight="10dp"
         android:layout_marginBottom="10dp"
         android:layout_alignBottom="@+id/bill_list_item_date"
         />
 </RelativeLayout>
