    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:background="@color/fragment_background"
    tools:context=".SetClockActivity"
    android:shrinkColumns="1,2"
    android:stretchColumns="2">

            <TableRow
                android:id="@+id/setclockrow0"
                android:background="@color/fragment_info_row_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="1dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">
                <TextView
                    android:id="@+id/setdate_t"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="提醒日期"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/setdate_c"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingLeft = "10dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_span="2"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/setclockrow1"
                android:background="@color/fragment_info_row_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="1dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">
                <TextView
                    android:id="@+id/settime_t"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="提醒时间"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/settime_c"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingLeft = "10dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_span="2"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/setclockrow2"
                android:background="@color/fragment_info_row_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="1dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">
                <TextView
                    android:id="@+id/settitle_t"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="标题"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/settitle_c"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingLeft = "10dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:ems="10"
                    android:layout_span="2"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/setclockrow3"
                android:background="@color/fragment_info_row_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="1dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">
                <TextView
                    android:id="@+id/setcontent_t"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="内容描述"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    />
                <EditText
                    android:id="@+id/setcontent_c"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingLeft = "10dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:layout_span="2"
                    >
                    <requestFocus />
                </EditText>
            </TableRow>
