            <TableRow
                android:id="@+id/setclockrow5"
                android:background="@color/fragment_info_row_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="1dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">
                <TextView
                    android:id="@+id/setsound_t"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="提醒铃声"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    />
                <LinearLayout
                        android:id="@+id/setsound_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                
                        <CheckBox
                            android:id="@+id/setsound_r"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="铃声" />

                        <CheckBox
                            android:id="@+id/setsound_v"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="震动" />
                </LinearLayout>
                <Spinner
                    android:id="@+id/setsound_s"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:paddingLeft = "10dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:spinnerMode="dialog"
                    android:layout_span="2"
                    />

            </TableRow>
            <TableRow
                android:id="@+id/setclockrow6"
                android:background="@color/fragment_info_row_background"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="1dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                >
               <Button
                   android:id="@+id/setsave"
                   android:paddingLeft="10dp"
                   android:paddingRight="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:text="保存"
                   android:textSize="16sp"
                   android:textColor="@color/app_white"
                   android:background="@color/app_blue"
                   >
               </Button>
               <Button
                   android:id="@+id/setdelete"
                   android:paddingLeft="10dp"
                   android:paddingRight="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:layout_marginLeft="10dp"
                   android:text="删除"
                   android:textSize="16sp"
                   android:textColor="@color/app_white"
                   android:background="@color/app_blue"
                   >
               </Button>
            </TableRow>
            
    </TableLayout>
