     <RadioGroup
        android:id="@+id/tooth_tab"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <RadioButton
            android:id="@+id/tooth_tab_permanent"
            style="@style/emr_tab"
            android:drawableBottom="@drawable/emr_tab_bottom"
            android:text="恒牙" />
        <RadioButton
            android:id="@+id/tooth_tab_primary"
            style="@style/emr_tab"
            android:drawableBottom="@drawable/emr_tab_bottom"
            android:text="乳牙" />
        <RadioButton
            android:id="@+id/tooth_tab_2d"
            style="@style/emr_tab"
            android:drawableBottom="@drawable/emr_tab_bottom"
            android:text="2D" />
        <RadioButton
            android:id="@+id/tooth_tab_setting"
            style="@style/emr_tab"
            android:drawableBottom="@drawable/emr_tab_bottom"
            android:text="设置" />
    </RadioGroup>
  <FrameLayout 
        android:id="@+id/tooth_tabcontent"
     	android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:layout_below="@+id/tooth_tab"
     	/>
  
   
</RelativeLayout>
